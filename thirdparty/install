#!/usr/bin/env bash

set -e

if [ ! -f install ]; then
    echo 'install must be run within its container folder' 1>&2
    exit 1
fi

OLDGOPATH="$GOPATH"
export GOPATH=`pwd`

gofmt -w src

go install github.com/go-martini/martini
go install github.com/codegangsta/martini-contrib/auth

export GOPATH="$OLDGOPATH"
export PATH="$OLDPATH"

echo 'finished'
